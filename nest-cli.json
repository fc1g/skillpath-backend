{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/bff/src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/bff/tsconfig.app.json",
		"plugins": ["@nestjs/swagger/plugin", "@nestjs/graphql"]
	},
	"projects": {
		"auth": {
			"type": "application",
			"root": "apps/auth",
			"entryFile": "main",
			"sourceRoot": "apps/auth/src",
			"compilerOptions": {
				"tsConfigPath": "apps/auth/tsconfig.app.json"
			}
		},
		"bff": {
			"type": "application",
			"root": "apps/bff",
			"entryFile": "main",
			"sourceRoot": "apps/bff/src",
			"compilerOptions": {
				"tsConfigPath": "apps/bff/tsconfig.app.json"
			}
		},
		"common": {
			"type": "library",
			"root": "libs/common",
			"entryFile": "index",
			"sourceRoot": "libs/common/src",
			"compilerOptions": {
				"tsConfigPath": "libs/common/tsconfig.lib.json"
			}
		},
		"courses": {
			"type": "application",
			"root": "apps/courses",
			"entryFile": "main",
			"sourceRoot": "apps/courses/src",
			"compilerOptions": {
				"tsConfigPath": "apps/courses/tsconfig.app.json"
			}
		}
	},
	"monorepo": true,
	"root": "apps/bff"
}
